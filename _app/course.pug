mixin b(cl, href, p, target, id)
	a.button(class=cl href!=href target=target id=id)=p
mixin gt(cl, h3)
	h3.general-title(class=cl)=h3
mixin imgs(cl, src ,alt)
	img(class=cl src=path+src alt=alt)
mixin ai(n,p)
	.general-list-ol(class='general-list-ol-'+n)
		h4.general-list-ol-title
			span=n
		p.general-list-ol-text=p
mixin aib(cl, n,p)
	.general-list-ol(class='general-list-'+n+' '+cl)
		h4.general-list-ol-title
			span=n
		p.general-list-ol-text=p

