#main
	padding 0 0 50px
	min-height calc(100vh - 283px)
	@media screen and (max-width 767px)
		text-align center
	@media screen and (max-width 560px)
		padding 0 0 30px
.circle
	position absolute
	border-radius: 50%
	z-index 1
	&-pink
		background-color: #FEE7E6
	&-bordered
		border: 1px solid #D6D6D6;
.circle-main-1
	width 490px
	height: 490px
	top -100px
	right 0
	@media screen and (max-width 767px)
		width 380px
		height: 380px
		top auto
		bottom -150px
		right 50px
	@media screen and (max-width 560px)
		display none
.circle-main-2
	width 162px
	height: 162px
	top 200px
	right 400px
	@media screen and (max-width 767px)
		top auto
		bottom -160px
		right 350px
	@media screen and (max-width 560px)
		left 0
		top 220px
	@media screen and (max-width 385px)
		left -100px
.main
	&-title
		font-family: L
		font-size: 25px
		font-weight: normal
		line-height: 140%
		margin-bottom: 20px
		span
			color #5A9891
			display block
		@media screen and (min-width 2295px)
			margin-top: 120px
		@media screen and (max-width 767px)
			font-size: 23px
		@media screen and (max-width 560px)
			font-size: 20px
		@media screen and (max-width 385px)
			margin-bottom: 15px
	&-text
		font-size: 19px
		margin-bottom: 20px
		line-height: 140%
		span
			font-weight: 500
			&.spam
				background-color: yellow
				display inline-block
				padding 0 5px
				border-radius: 5px
			&.bonus
				color #48817B
		@media screen and (max-width 385px)
			font-size: 17px
			margin-bottom: 15px
.button-main
	margin-bottom: 50px
	@media screen and (max-width 991px)
		margin-bottom: 30px
	@media screen and (max-width 560px)
		padding 15px 30px
		img
			margin-left: 5px
	@media screen and (max-width 385px)
		margin-bottom: 20px