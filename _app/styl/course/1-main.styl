#main
	padding 0 0 90px
.main
	&-pre
		@media screen and (max-width 560px)
			font-size: 18px
	&-title
		font-family: L
		font-size: 38px
		font-weight: normal
		line-height: 120%
		margin 35px 0
		@media screen and (max-width 560px)
			font-size: 22px
			margin 20px 0
	&-subtitle
		font-size: 19px
		font-weight: 300
		@media screen and (max-width 560px)
			font-size: 17px
	&-info
		margin 45px 0 35px
		@media screen and (max-width 560px)
			margin 30px 0 20px
		&-text
			display inline-block
			font-family: L
			font-weight: normal
			span
				font-family: SUD
				font-weight: 300
				color #9C9C9C;
				display block
				margin-top: 5px
			&:last-of-type
				margin-left: 88px
				span
					color #5A9891
			@media screen and (max-width 1199px)
				display block
				&:last-of-type
					margin-left: 0
					margin-top: 10px
			@media screen and (max-width 560px)
				font-size: 20px
				&:last-of-type
					margin 20px 0 30px
	&-img
		position absolute
		top 0
		right -600px
		@media screen and (max-width 1199px)
			right -500px
		@media screen and (max-width 991px)
			position: static
			display block
			width 100%
			max-width 519px
			margin-bottom: 35px
		@media screen and (max-width 560px)
			margin 0 auto 20px