#prices
	padding 100px 0
	background-color: #FEE7E6;
	@media screen and (max-width 991px)
		padding 90px 0 30px
	@media screen and (max-width 560px)
		padding 60px 0 30px
.packet
	text-align center
	border-radius: 10px
	background-color #fff
	width 100%
	max-width 380px
	margin 0 auto 40px
	padding 30px 20px
	&-head
		&-title
			font-size: 20px
			font-weight: 300
			color #ADADAD
		&-text
			margin 20px 0 30px
			font-family: L
			font-size: 38px
			font-weight: 500
			color #2b514d
			@media screen and (max-width 560px)
				font-size: 30px
				margin 15px 0 20px
.cost
	font-size: 30px
	margin-bottom: 40px
	line-height: 1.4
	span
		font-size: 38px
		font-weight: 500
		text-transform uppercase
		display block
	@media screen and (max-width 560px)
		font-size: 26px
		margin-bottom: 30px
.prepayment
	text-align center
	@media screen and (max-width 991px)
		width 100%
		max-width 380px
		margin 0 auto 60px
		@media screen and (max-width 560px)
			margin-bottom: 40px
	&-title
		font-size: 48px
		font-weight: 500
		color red
		@media screen and (max-width 560px)
			font-size: 36px
	&-text
		font-size: 20px
		margin 20px 30px
		@media screen and (max-width 560px)
			font-size: 18px
			margin 15px 0 20px
		span
			display inline-block
			font-weight: 500