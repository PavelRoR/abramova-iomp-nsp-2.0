	&-1
	&-2
		position absolute
	&-1
		width 100px
		height: 80px
		border-top: 2px solid #5A9891;
		border-right: 2px solid #5A9891;
		border-bottom: 2px solid #5A9891;
		border-radius: 0 25px 25px 0
		top -29px
		right 179px
		@media screen and (max-width 1230px)
			right 155px
		@media screen and (max-width 1199px)
			right 55px
	&:before
	&:after
		content: ''
		display block
		position absolute
	&:before
		border-top: 2px solid #5A9891;
		width 560px
		top 49px
		left 50px
		@media screen and (max-width 1199px)
			width 660px
	&:after
		width 100px
		height: 80px
		border-top: 2px solid #5A9891;
		border-left: 2px solid #5A9891;
		border-bottom: 2px solid #5A9891;
		border-radius: 25px 0 0 25px
		top 49px
		left -50px
	&-2
		width 68px
		border-top: 2px solid #5A9891;
		left 50px
		top 127px
		@media screen and (max-width 1230px)
			left 25px
