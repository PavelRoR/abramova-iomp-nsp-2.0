#skills
	padding 100px 0
	@media screen and (max-width 1199px)
		padding 100px 0 50px
	@media screen and (max-width 991px)
		padding 90px 0
	@media screen and (max-width 560px)
		padding 60px 0
.skills-item
	position relative
	&-2
		margin: 150px 0 80px
		@media screen and (max-width 1230px)
			margin-top: 80px
		@media screen and (max-width 560px)
			margin 50px 0
	&-title
		font-family: L
		font-size: 38px
		font-weight: normal
		margin-bottom: 30px
		@media screen and (max-width 560px)
			font-size: 28px
			margin-bottom: 20px
	&-block
		position relative
		display inline-block
		padding 12px
		border: 2px solid #5A9891;
		border-radius: 5px;
		margin-right: 9px
		&:last-of-type
			margin-right: -1px
			@media screen and (max-width 991px)
				margin-right: 0
		&-sert
			background-color: #48817B;
			border:  2px solid #5A9891;
			color #FEE7E6
		@media screen and (max-width 991px)
			margin-right: 0
.arrow
	position relative
	border-top: 2px solid #5A9891;
	margin-right: 9px
	display inline-block
	@media screen and (max-width 991px)
		display block
		margin 20px 0 20px 60px
		height: 100px
		width 2px
		border-top: 0
		background-color: #5A9891;
		top 0
	@media screen and (max-width 560px)
		margin 20px 0 20px 45px
	&:after
		content: ''
		display block
		position absolute
		width 11px
		height: 11px
		border-top: 2px solid #5A9891;
		border-right: 2px solid #5A9891;
		transform rotate(45deg)
		top -6.5px
		right: 0
		@media screen and (max-width 991px)
			top auto
			bottom 0
			transform: rotate(135deg)
			left -4px
			right auto
			width 10px
			height: 10px
