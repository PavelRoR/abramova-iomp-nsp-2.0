#main
	padding 0 0 50px
	min-height calc(100vh - 532px)
	@media screen and (max-width 767px)
		text-align center
	@media screen and (max-width 560px)
		padding 0 0 30px
.circle
	position absolute
	border-radius: 50%
	z-index 1
	&-pink
		background-color: #FEE7E6
	&-bordered
		border: 1px solid #D6D6D6;
.circle-main-1
	width 490px
	height: 490px
	top -100px
	right 0
	@media screen and (max-width 767px)
		width 380px
		height: 380px
		top 50px
		right 50px
	@media screen and (max-width 560px)
		display none
.circle-main-2
	width 162px
	height: 162px
	top 200px
	right 400px
	@media screen and (max-width 560px)
		left 0
.main
	&-title
		font-family: L
		font-size: 42px
		font-weight: normal
		line-height: 140%
		text-transform uppercase
		span
			color #5A9891
			display inline-block
		@media screen and (min-width 2256px)
			margin-top: 120px
		@media screen and (max-width 767px)
			font-size: 36px
		@media screen and (max-width 560px)
			font-size: 28px
		@media screen and (max-width 385px)
			font-size: 22px
	&-subtitle
		font-size: 24px
		font-weight: 500
		margin-top: 30px
		span
			color #48817B
		@media screen and (max-width 560px)
			font-size: 22px
	&-text
		font-size: 24px
		margin: 50px 0 30px
		@media screen and (max-width 767px)
			font-size: 20px
			margin 30px 0 20px
		@media screen and (max-width 385px)
			margin 10px 0 15px
			font-size: 17px
.post-link
	display inline-block
	margin-right: 30px
	transition: all .3s ease-out
	&:last-child
		margin-right: 0
	&:hover
		transform: translateY(-8px)
	@media screen and (max-width 560px)
		margin-right: 15px
	@media screen and (max-width 385px)
		margin-right: 10px
.post-icon
	display block
	width 100%
	max-width 83px
	margin 0 auto
	@media screen and (max-width 560px)
		max-width 65px
	@media screen and (max-width 385px)
		max-width 45px