#revs
	padding 110px 0 160px
	.container
		position relative
.revs-slider
.revs-slider-text
	width 110%
	max-width 1920px
	margin 0 auto
	position relative
	z-index 50
.revs-slider-text
	margin-top: 180px
.slick-slide
	padding 20px
.text-rev-img
	width 100%
	height 700px
	object-fit: contain
	object-position: center top
	border 1px solid #48817B
.video-revs-arrows-1
.video-revs-arrows-2
	position absolute
	width 110px
	top 0
	left 0
	z-index 100
.slick-next:before
.slick-prev:before
	color: #5A9891
	font-size: 60px
	font-weight: normal
	transition: all .3s ease
	opacity 1
.slick-next:hover:before
.slick-prev:hover:before
	color: #2B514D