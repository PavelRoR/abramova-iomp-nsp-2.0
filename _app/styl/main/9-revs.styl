#revs
	padding 110px 0 160px
	.container
		position relative
	@media screen and (max-width 991px)
		padding 90px 0 130px
	@media screen and (max-width 560px)
		padding 60px 0 130px
.revs-slider
.revs-slider-text
	width 110%
	max-width 1920px
	margin 0 auto
	position relative
	z-index 50
	@media screen and (max-width 560px)
		width 96%
.revs-slider-text
	margin-top: 180px
	@media screen and (max-width 560px)
		margin-top: 100px
.slick-slide
	padding 20px
.text-rev-img
	width 100%
	height 700px
	object-fit: contain
	object-position: center top
	border 1px solid #48817B
	@media screen and (max-width 1199px)
		height: 400px
	@media screen and (max-width 991px)
		height: 250px
		object-fit: cover
	@media screen and (max-width 560px)
		height: 450px
.video-revs-arrows-1
.video-revs-arrows-2
	position absolute
	width 110px
	top 0
	left 0
	z-index 999
	&-mob
		display none
	@media screen and (max-width 560px)
		&-dt
			display none
		&-mob
			display block
		left auto
		right 65px
@media screen and (max-width 560px)
	.video-revs-arrows-2-mob
		top 55px
.slick-next
.slick-prev
	transform: none
	width 60px
	height: 71px
	top 0
	background-image: url(../img/icons/arrows.png)
	background-repeat: no-repeat
	background-position: center left
	opacity .8
	transition: all .3s ease
	@media screen and (max-width 560px)
		width 40px
		height: 60px
		top -15px
	&:before
		content: none
.slick-prev
	left 15px
	@media screen and (max-width 560px)
		left 45px
.slick-next
	right -35px
	background-position: center right
.slick-next:hover
.slick-prev:hover
.slick-next:focus
.slick-prev:focus
	background-image: url(../img/icons/arrows.png)
	background-repeat: no-repeat
	background-position: center left
	opacity 1
.slick-next:hover
.slick-next:focus
	background-position: center right
.slick-disabled
	opacity .5
	&:hover
	&:focus
		opacity .5