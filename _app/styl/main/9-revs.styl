#revs
	padding 110px 0 160px
	.container
		position relative
	@media screen and (max-width 991px)
		padding 90px 0 130px
	@media screen and (max-width 560px)
		padding 60px 0 130px
.revs-slider
.revs-slider-text
	width 110%
	max-width 1920px
	margin 0 auto
	position relative
	z-index 50
	@media screen and (max-width 560px)
		width 96%
.revs-slider-text
	margin-top: 180px
	@media screen and (max-width 560px)
		margin-top: 100px
.slick-slide
	padding 20px
.text-rev-img
	width 100%
	height 700px
	object-fit: contain
	object-position: center top
	border 1px solid #48817B
	@media screen and (max-width 1199px)
		height: 400px
	@media screen and (max-width 767px)
		height: 250px
	@media screen and (max-width 560px)
		height: 450px
		object-fit: cover
.video-revs-arrows-1
.video-revs-arrows-2
	position absolute
	width 110px
	top 0
	left 0
	z-index 100
	@media screen and (max-width 560px)
		left auto
		right 85px
.slick-prev
	left 15px
.slick-next
	right -15px
.slick-next:before
.slick-prev:before
	color: #5A9891
	font-size: 60px
	font-weight: normal
	transition: all .3s ease
	opacity 1
.slick-next:hover:before
.slick-prev:hover:before
	color: #2B514D