#main
	padding 0
.main
	&-pre
		@media screen and (max-width 560px)
			font-size: 18px
	&-title
		font-family: L
		font-size: 38px
		font-weight: normal
		line-height: 120%
		margin 35px 0
		@media screen and (max-width 560px)
			font-size: 22px
			margin 20px 0
	&-subtitle
		font-size: 19px
		font-weight: 300
		@media screen and (max-width 560px)
			font-size: 17px
	&-info
		margin 45px 0 35px
		@media screen and (max-width 560px)
			margin 30px 0 20px
		&-text
			display inline-block
			font-family: L
			font-weight: normal
			span
				font-family: SUD
				font-weight: 300
				color #9C9C9C;
				display block
				margin-top: 5px
			&:last-of-type
				margin-left: 88px
				span
					color #5A9891
			@media screen and (max-width 1199px)
				display block
				&:last-of-type
					margin-left: 0
					margin-top: 10px
			@media screen and (max-width 560px)
				font-size: 20px
				&:last-of-type
					margin 20px 0 30px
	&-img
		position absolute
		top 0
		right -600px
		@media screen and (max-width 1199px)
			right -500px
		@media screen and (max-width 991px)
			position: static
			display block
			width 100%
			max-width 519px
			margin-bottom: 35px
		@media screen and (max-width 560px)
			margin 0 auto 20px
.input
	display block
	width 100%
	border: 1px solid #BCBCBC;
	border-radius: 5px;
	padding 16px 28px
	color: #9C9C9C;
	background-color #fff
	&-mail
		max-width 317px
		float left
		@media screen and (max-width 1230px)
			max-width 290px
		@media screen and (max-width 1199px)
			display block
			float none
			max-width 317px
			margin 0 0 30px
		@media screen and (max-width 560px)
				margin 0 auto 10px
.button-form
	float right
	background-color: #C7C7C7
	color: #fff
	@media screen and (max-width 1199px)
		float: none
		display block
		width 100%
		max-width 315px
		margin 0
	@media screen and (max-width 560px)
		margin 0 auto
		background-color: #48817B
@-webkit-keyframes autofill
	to
		font-size: 19px
		color: #9C9C9C;
		background-color: #fff
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.alert-message
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-weight: 500
	line-height: 1
.checking
	display: table;
	width 100%
	max-width 498px
	margin: 15px auto 0
	text-align: left
.checking-main
	margin-left: 0
	@media screen and (max-width 1199px)
		max-width 280px
	@media screen and (max-width 560px)
		margin 10px auto 0
.checking .check-label
	line-height: 27px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 28px;
	text-align: left;
	font-size: 15px
	color #9C9C9C
	@media screen and (max-width 1199px)
		line-height: 18px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed transparent
	color #9C9C9C
	&:focus
		border-bottom: 1px dashed transparent
		color #9C9C9C
	&:hover
		border-bottom-color: #9C9C9C
		text-decoration: none
		color #9C9C9C
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .22)
	100%
		box-shadow: 0 0 7px 5px rgba(red, .22)
.checking .check-label:before
	content: '';
	background-color: red
	position: absolute;
	left: 0;
	top: 3px;
	width: 17px;
	height: 17px;
	border: 1px solid red
	border-radius: 5px
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 5px;
	top: -10px;
	width: 7px;
	height: 12px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 1px solid #9C9C9C
	border-right: 1px solid #9C9C9C
	transform: rotate(41deg);
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: #fff
	animation: none
	border: 1px solid #9C9C9C;
.check:checked + .check-label:after
	opacity: 1;
	top: 4px;
	transition: all 0.5s ease;
::-webkit-input-placeholder
::-moz-placeholder
:-moz-placeholder
:-ms-input-placeholder
	color:#9C9C9C;
	opacity:1;