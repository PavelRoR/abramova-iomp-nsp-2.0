#author
	padding 80px 0 130px
	background-color: #2B514D
	@media screen and (max-width 1199px)
		padding 80px 0
	@media screen and (max-width 560px)
		padding 60px 0
.author-img
	position relative
	padding-top: 100%
	img
		position absolute
		width auto
		left 134px
		right 0
		margin 0 auto
		display block
		top 0
	@media screen and (max-width 1199px)
		img
			left 65px
	@media screen and (max-width 991px)
		margin-top: 60px
		padding-top: 0
		img
			position: relative
			left 14%
			width 100%
			max-width 468px
.author-title
	position absolute
	text-align center
	font-family: L
	font-size: 64px
	font-weight: normal
	line-height: 120%
	color #FEE7E6
	left 0
	right 0
	top 430px
	@media screen and (max-width 560px)
		font-size: 48px
		top auto
		bottom 24%
	@media screen and (max-width 386px)
		font-size: 36px